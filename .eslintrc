{
  "extends": "eslint:recommended",
  "plugins": ["angular"],
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "globals": {
    "angular": true,
    "module": true,
    "inject": true,
    "sinon": true
  },
  "rules": {
    "curly": 2,
    "dot-location": [2, "property"],
    "eqeqeq": [2, "smart"],
    "no-alert": 2,
    "no-caller": 2,
    "no-const-assign": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-implied-eval": 2,
    "no-multi-spaces": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-octal-escape": 2,
    "no-proto": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 0,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-var": 2,
    "no-void": 2,
    "no-with": 2,
    "radix": 2,
    "yoda": 2,

    "arrow-spacing": 2,
    "brace-style": 2,
    "camelcase": 2,
    "comma-spacing": 2,
    "comma-style": 2,
    "eol-last": 2,
    "indent": [2, 2, {"SwitchCase": 1}],
    "key-spacing": 2,
    "max-depth": [2, 5],
    "max-len": [1, 120, 4],
    "max-nested-callbacks": [2, 4],
    "new-cap": 2,
    "no-array-constructor": 2,
    "no-lonely-if": 2,
    "no-multiple-empty-lines": [2, {"max": 2}],
    "no-negated-condition": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "object-curly-spacing": 2,
    "operator-linebreak": 2,
    "semi-spacing": 2,
    "semi": 2,
    "space-after-keywords": 2,
    "space-before-blocks": 2,
    "space-before-keywords": 2,
    "space-before-function-paren": [2, "never"],
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-ops": 2,
    "spaced-comment": 2,
    "quotes": [2, "single"]
  }
}
